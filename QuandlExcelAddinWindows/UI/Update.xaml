<UserControl x:Class="Quandl.Excel.Addin.UI.Update"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Quandl.Excel.Addin.UI"
             mc:Ignorable="d">
    <Grid>
        <Border BorderThickness="1" BorderBrush="#C5D1D8" Background="#FFF2F2F2"/>
        <DockPanel Margin="10" LastChildFill="True">
            <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Name="DownloadButton" Width="200" Height="30" Margin="5,10" Content="Download Newest Version" FontSize="14" Click="Button_Click" />
                <Button Name="ReleasesButton" Width="200" Height="30" Margin="5,10" Content="All Releases" FontSize="14" Click="All_Release_Button_Click" />
            </StackPanel>
            <FlowDocumentScrollViewer MinHeight="250" Margin="0,5" BorderThickness="1" BorderBrush="LightGray" Name="DocFlow" Background="White" DockPanel.Dock="Top" />
        </DockPanel>
    </Grid>
</UserControl>
