<UserControl x:Class="Quandl.Excel.Addin.UI.UDF_Builder.DateConditionSelection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Quandl.Excel.Addin.UI.UDF_Builder.Filters"
             mc:Ignorable="d">
    <Grid>
        <ComboBox x:Name="ConditionBox" HorizontalAlignment="Left" Margin="0,45,0,0" VerticalAlignment="Top" Width="40" SelectionChanged="ConditionBox_OnSelectionChanged"/>
        <DatePicker x:Name="DateBox"  HorizontalAlignment="Left" Margin="50,45,0,0" VerticalAlignment="Top" SelectedDateChanged="DateBox_OnSelectedDateChanged"/>

    </Grid>
</UserControl>
