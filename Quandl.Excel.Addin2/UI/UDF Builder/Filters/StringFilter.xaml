<UserControl x:Class="Quandl.Excel.Addin.UI.UDF_Builder.Filters.StringFilter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Quandl.Excel.Addin.UI.UDF_Builder.Filters"    
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel>
        <Label x:Name="Filterlabel" HorizontalAlignment="Left" Margin="5,0" VerticalAlignment="Top" Height="30" Width="300"/>
        <TextBox x:Name="StringFilterInput" HorizontalAlignment="Left" Height="20" Margin="10,5" TextWrapping="Wrap" VerticalAlignment="Top" Width="400" TextChanged="StringFilterInput_TextChanged"/>
    </StackPanel>
</UserControl>

