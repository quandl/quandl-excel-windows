<UserControl x:Class="Quandl.Excel.Addin.UI.UDF_Builder.Filters.IntegerFilter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Quandl.Excel.Addin.UI.UDF_Builder.Filters"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel>
        <Label x:Name="Filterlabel" HorizontalAlignment="Left" Margin="5,0" VerticalAlignment="Top" Height="30" Width="300"/>
        <TextBox x:Name="IntegerFilterInput" HorizontalAlignment="Left" Height="23" Margin="10,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200" PreviewTextInput="IntegerFilterInput_OnPreviewTextInput" TextChanged="IntegerFilterInput_OnTextChanged"/>
    </StackPanel>
</UserControl>
